<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9DBD1">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/ic_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="165dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/akajufont"
            android:gravity="center"
            android:text="mostri da tasca"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/akajufont"
            android:gravity="center"
            android:text="the game"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="160dp"
            android:fontFamily="@font/akajufont"
            android:justificationMode="inter_word"
            android:text="@string/mdt_description"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/akajufont"
            android:gravity="center"
            android:text="credits"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="published by"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="mostridatasca.com"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="developed by "
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="marianna oleotti"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="released"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="175dp"
            android:fontFamily="@font/akajufont"
            android:text="Jan, 2020"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="246dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="75dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/credits" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
