<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E0E0">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="110dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/ic_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="249dp"
            android:layout_height="249dp"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            android:padding="7dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="60dp"
            android:fontFamily="@font/akajufont"
            android:gravity="center"
            android:text="win/lost/died"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pointsGained"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="60dp"
            android:fontFamily="@font/akajufont"
            android:gravity="center"
            android:text="points gained"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:foregroundGravity="left"
                app:srcCompat="@drawable/heart2" />

            <TextView
                android:id="@+id/LP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/akajufont"
                android:gravity="start|left"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center|right"
                app:srcCompat="@drawable/favorite" />

            <TextView
                android:id="@+id/XP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/akajufont"
                android:gravity="start|left"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <Button
            android:id="@+id/ok"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="multiply"
            android:foreground="@drawable/ic_confirm"
            android:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>